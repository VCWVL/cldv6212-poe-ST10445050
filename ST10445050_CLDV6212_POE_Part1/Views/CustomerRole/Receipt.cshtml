@model ST10445050_CLDV6212_POE_Part1.Models.Order
@{
    Layout = "~/Views/Shared/CustomerRoleLayout.cshtml";
    ViewData["Title"] = "Receipt";
}

<div class="container mt-5 text-center fade-in">

    <h2 class="thank-title">🎉 Thank You for Your Purchase!</h2>
    <p class="subtitle mt-2">Your order has been successfully processed.</p>

    
    <div class="receipt-card shadow-lg p-4 mt-4 mx-auto">
        <h4 class="receipt-header mb-3">Order Receipt</h4>

        <div class="receipt-row">
            <span>Order ID:</span>
            <strong>@Model.orderID</strong>
        </div>

        <div class="receipt-row">
            <span>Customer ID:</span>
            <strong>@Model.customerID</strong>
        </div>

        <div class="receipt-row">
            <span>Product(s):</span>
            <strong>@Model.productID</strong>
        </div>

        <div class="receipt-row">
            <span>Total Paid:</span>
            <strong>R @Model.orderTotal.ToString("0.00")</strong>
        </div>

        <div class="receipt-row">
            <span>Date:</span>
            <strong>@Model.orderDate.ToString("yyyy-MM-dd HH:mm")</strong>
        </div>
    </div>

    
    <a asp-action="Index" class="btn return-btn mt-4 px-5 py-2 rounded-pill">
        Return to Home Page
    </a>

</div>

<style>

    
    .fade-in {
        animation: fadeIn 0.9s ease;
    }
    @@keyframes fadeIn {
        0%

    {
        opacity: 0;
        transform: translateY(15px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .thank-title {
        color: #CD5656;
        font-weight: 800;
        font-size: 2rem;
    }

    .subtitle {
        font-size: 1.15rem;
        color: #444;
    }

    
    .receipt-card {
        background: white;
        border-radius: 18px;
        max-width: 550px;
        border: 1px solid #eee;
        box-shadow: 0 12px 30px rgba(0,0,0,0.15);
        transition: transform 0.3s ease;
    }

        .receipt-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.25);
        }

    .receipt-header {
        color: #AF3E3E;
        font-weight: 700;
        border-bottom: 2px solid #F3DADA;
        padding-bottom: 10px;
    }

    .receipt-row {
        display: flex;
        justify-content: space-between;
        font-size: 1.1rem;
        padding: 10px 0;
        border-bottom: 1px solid #F4E3E3;
    }

        .receipt-row:last-child {
            border-bottom: none;
        }

    
    .return-btn {
        background-color: #CD5656;
        color: white;
        font-weight: bold;
        font-size: 1.1rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.25);
        transition: all 0.3s ease;
    }

        .return-btn:hover {
            background-color: #AF3E3E;
            transform: scale(1.07);
            box-shadow: 0 8px 20px rgba(0,0,0,0.35);
            color: white;
        }

</style>
