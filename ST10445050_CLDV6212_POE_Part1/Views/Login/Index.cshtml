@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";   /* ✅ Your requested layout */
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-box shadow-lg p-5">
        <h2 class="text-center mb-4 login-title">User Login</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }

        <form method="post" asp-controller="Login" asp-action="Login">
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="email" required placeholder="Enter your email" />
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" id="Password" name="password" required placeholder="Enter your password" />
            </div>

            <button type="submit" class="btn btn-login w-100">Login</button>
        </form>

        <p class="text-center mt-3">
            Don't have an account? 
            <a href="@Url.Action("Register", "Login")" class="btn-create-account">Create one here</a>
        </p>
    </div>
</div>

<style>
    
    .login-box {
        max-width: 400px;
        width: 100%;
        border-radius: 20px;
        background-color: #F6E3E3; 
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        padding: 40px 30px;
    }

    .login-title {
        font-weight: bold;
        color: #AF3E3E;
    }

    .form-label {
        font-weight: bold;
        color: #AF3E3E;
    }

    .form-control {
        border-radius: 12px;
        border: 1px solid #E0A3A3;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }
    .form-control:focus {
        border-color: #CD5656;
        box-shadow: 0 0 8px rgba(205, 86, 86, 0.4);
        outline: none;
    }

    .alert {
        font-size: 14px;
        border-radius: 8px;
    }

    .btn-login {
        background: linear-gradient(145deg, #CD5656, #AF3E3E);
        color: white;
        font-weight: bold;
        border-radius: 50px;
        padding: 12px;
        box-shadow: 0 5px #9B2B2B, 0 10px 15px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
    }

    .btn-login:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px #9B2B2B, 0 15px 25px rgba(0,0,0,0.3);
        background: linear-gradient(145deg, #AF3E3E, #CD5656);
    }

    .btn-login:active {
        transform: translateY(2px);
        box-shadow: 0 3px #9B2B2B, 0 5px 10px rgba(0,0,0,0.2);
    }

    .btn-create-account {
        font-weight: bold;
        color: #CD5656;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-create-account:hover {
        color: #AF3E3E;
        text-decoration: underline;
    }
</style>
